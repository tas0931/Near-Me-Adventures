{
  "info": {
    "name": "NM Adventures API",
    "description": "Collection for testing NM Adventures backend APIs (local)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5001" },
    { "key": "authToken", "value": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY5M2VmODgyNjhmYTJkMDdkMmFiNTkyYiIsImlhdCI6MTc2NTczNDU0MSwiZXhwIjoxNzY2MzM5MzQxfQ.Y1pF5G8qmJtLKuRJz-DZPGIms2_wX90EbBlnplaeboM" }
  ],
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"postman-test@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/auth/register", "host": ["{{baseUrl}}"], "path": ["api","auth","register"] }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"postman-test@example.com\",\n  \"password\": \"password123\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] }
      }
    },
    {
      "name": "Auth - Me (protected)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
        "url": { "raw": "{{baseUrl}}/api/auth/me", "host": ["{{baseUrl}}"], "path": ["api","auth","me"] }
      }
    },
    {
      "name": "Auth - List Users (admin)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "admin-token" } ],
        "url": { "raw": "{{baseUrl}}/api/auth/admin/users", "host": ["{{baseUrl}}"], "path": ["api","auth","admin","users"] }
      }
    },
    {
      "name": "Bookings - Get",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
        "url": { "raw": "{{baseUrl}}/api/bookings", "host": ["{{baseUrl}}"], "path": ["api","bookings"] }
      }
    },
    {
      "name": "Bookings - Add",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"itemId\": \"123\",\n  \"title\": \"Sample Adventure\",\n  \"img\": \"https://example.com/img.jpg\",\n  \"duration\": \"3 hours\",\n  \"price\": 1200,\n  \"priceLabel\": \"৳ 1,200\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/bookings", "host": ["{{baseUrl}}"], "path": ["api","bookings"] }
      }
    },
    {
      "name": "Bookings - Delete (replace :id)",
      "request": {
        "method": "DELETE",
        "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
        "url": { "raw": "{{baseUrl}}/api/bookings/:id", "host": ["{{baseUrl}}"], "path": ["api","bookings",":id"] }
      }
    },
    {
      "name": "Wishlist - Get",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
        "url": { "raw": "{{baseUrl}}/api/wishlist", "host": ["{{baseUrl}}"], "path": ["api","wishlist"] }
      }
    },
    {
      "name": "Wishlist - Add",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"itemId\": \"999\",\n  \"title\": \"Nice Spot\",\n  \"img\": \"https://example.com/w.jpg\",\n  \"duration\": \"2 hours\",\n  \"price\": \"৳ 800\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/wishlist", "host": ["{{baseUrl}}"], "path": ["api","wishlist"] }
      }
    },
    {
      "name": "Wishlist - Delete (replace :id)",
      "request": {
        "method": "DELETE",
        "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
        "url": { "raw": "{{baseUrl}}/api/wishlist/:id", "host": ["{{baseUrl}}"], "path": ["api","wishlist",":id"] }
      }
    },
    {
      "name": "Chat - Get",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
        "url": { "raw": "{{baseUrl}}/api/chat", "host": ["{{baseUrl}}"], "path": ["api","chat"] }
      }
    },
    {
      "name": "Chat - Post",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"text\": \"Hello from Postman\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/chat", "host": ["{{baseUrl}}"], "path": ["api","chat"] }
      }
    }
  ]
}
